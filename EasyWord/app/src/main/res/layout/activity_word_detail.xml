<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordDetailActivity"
    android:orientation="vertical"
    android:background="@drawable/total_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:text="lu"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_word_detail_word"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:src="@drawable/ic_star_border" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="end"
            android:text="kun"
            android:textSize="30sp"
            android:padding="10dp"
            android:id="@+id/tv_word_detail_meaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/round_border_black"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_word_detail_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你好"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_word_detail_sentence_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你好aaaa"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>