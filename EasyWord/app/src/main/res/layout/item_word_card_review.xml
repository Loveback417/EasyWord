<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view_review_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="lu"
        android:textSize="45sp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:id="@+id/tv_review_menu_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="kun"
            android:textSize="30sp"
            android:padding="10dp"
            android:gravity="end"
            android:id="@+id/tv_review_menu_meaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/round_border_black"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_review_menu_sentence"
            android:textSize="20sp"
            android:text="你好"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_review_menu_sentence_meaning"
            android:textSize="20sp"
            android:text="你好aaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_review_menu_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="你好aaaa"
        android:fontFamily="@font/font_learn_menu"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="@color/transparent"
            android:layout_margin="5dp"
            android:id="@+id/btn_review_sure"
            android:text="下一词"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:backgroundTint="@color/transparent"
            android:layout_margin="5dp"
            android:id="@+id/btn_review_little"
            android:text="有印象"
            android:textSize="20sp"
            android:textColor="@color/yello"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:backgroundTint="@color/transparent"
            android:layout_margin="5dp"
            android:id="@+id/btn_review_forget"
            android:text="忘记了"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:background="@color/green"/>


        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:background="@color/yello"/>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:background="@color/red"/>

    </LinearLayout>




</LinearLayout>