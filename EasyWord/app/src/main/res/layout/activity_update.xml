<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root_sign_up_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/total_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">
            <ImageView
                android:id="@+id/iv_update_user_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/image_default"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:contentDescription="用户头像" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_update_account"
            android:drawableStart="@drawable/icon_account"
            android:drawablePadding="10dp"
            android:background="@color/transparent"
            android:hint="请输入账号"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <EditText
            android:id="@+id/et_update_old_password"
            android:drawableStart="@drawable/icon_key"
            android:drawablePadding="10dp"
            android:background="@color/transparent"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <EditText
            android:id="@+id/et_update_new_password"
            android:drawableStart="@drawable/icon_key"
            android:drawablePadding="10dp"
            android:background="@color/transparent"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <EditText
            android:id="@+id/et_update_nickname"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:background="@color/transparent"
            android:hint="请输入昵称"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <EditText
            android:id="@+id/et_update_email"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:background="@color/transparent"
            android:hint="请输入邮箱"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:text="修改"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>