<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/total_background">
    <TextView
        android:gravity="center"
        android:textSize="50sp"
        android:text="享学单词"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/font_login"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/round_border"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:gravity="center"
            android:backgroundTint="@color/transparent">
            <EditText
                android:id="@+id/et_account"
                android:drawableStart="@drawable/icon_account"
                android:drawablePadding="10dp"
                android:background="@color/transparent"
                android:hint="请输入账号"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/round_border"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:backgroundTint="@color/transparent">
            <EditText
                android:id="@+id/et_password"
                android:drawableStart="@drawable/icon_key"
                android:drawablePadding="10dp"
                android:background="@color/transparent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="10dp">

        <CheckBox
            android:id="@+id/ck_save_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="保存密码"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="注册新账号"
            android:textColor="@color/red"
            android:gravity="right|center"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>